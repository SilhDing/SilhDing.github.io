/** fonts **/
$font-size-content = 13.5pt
$font-size-code = 11.5pt


/** light theme **/
$light-theme-main-color = #138D75    // simply change it to change all
$light-theme-main-color-second = #F08080
$light-background-color = #fff

$light-font-color = #161209
$light-font-secondary-color = #a9a9b3

$light-navbar-active-color = #161209

$light-global-link-color = #161209
$light-global-link-hover-color = $light-theme-main-color

$light-post-link-color = $light-theme-main-color
$light-post-link-hover-color = $light-theme-main-color-second // this is external link, e.g, email

$light-pagination-link-color = $light-theme-main-color
$light-pagination-link-active-color = $light-theme-main-color

$light-border-color = #e8e8e8

$light-code-font-color = #c7254e
$light-code-background-color = #f8f5ec

$light-post-blockquote-border-color = $light-global-link-hover-color
$light-post-blockquote-background-color = lighten($light-global-link-hover-color,90%)

$light-post-table-background-color = lighten($light-global-link-hover-color,70%)

/** dark theme **/

$dark-theme-main-color = #eee
$dark-theme-main-color-second = $light-theme-main-color-second

$dark-background-color = #292a2d

$dark-font-color = #a9a9b3
$dark-font-secondary-color = #87878d

$dark-navbar-active-color = #fff

$dark-global-link-color = #a9a9b3
$dark-global-link-hover-color = #fff

$dark-post-link-color = #eee
$dark-post-link-hover-color = $light-theme-main-color-second

$dark-pagination-link-color = #a9a9b3
$dark-pagination-link-active-color = #fff

$dark-border-color = #909196

$dark-code-font-color = #bbbbc3
$dark-code-background-color = #6d7078

$dark-post-blockquote-border-color = #dcdcdc
$dark-post-blockquote-background-color = #3e3e3e

$dark-post-table-background-color = #626262
