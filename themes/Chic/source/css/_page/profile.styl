/** Profile **/

.intro
  transform translateY(18vh)
  text-align center
  .avatar
    padding 20px
    img
      width 128px
      height auto
      display inline-block
      -webkit-border-radius 100%
      border-radius 100%
      -webkit-box-shadow 0 0 0 0.2em rgba(0, 0, 0, 0.05)
      box-shadow 0 0 0 0.2em rgba(0, 0, 0, 0.05)
      margin 0 auto
      -webkit-transition all ease 0.4s
      -moz-transition all ease 0.4s
      -o-transition all ease 0.4s
      transition all ease 0.4s
      cursor pointer
      .dark-theme &
        -webkit-box-shadow 0 0 0 0.2em lighten(#333, 10%)
        box-shadow 0 0 0 0.2em lighten(#333, 10%)
      &:hover
        position relative
        -webkit-box-shadow 0 0 0 0.4em rgba(0, 0, 0, 0.05)
        box-shadow 0 0 0 0.4em rgba(0, 0, 0, 0.05)
        .dark-theme &
          -webkit-box-shadow 0 0 0 0.4em lighten(#333, 10%)
          box-shadow 0 0 0 0.4em lighten(#333, 10%)
        -webkit-transform translateY(-0.75em)
        -moz-transform translateY(-0.75em)
        -ms-transform translateY(-0.75em)
        -o-transform translateY(-0.75em)
        //transform translateY(-0.75em)
        transform: scale(1.05)  // zoom out the icon
        cursor pointer


.nickname
  font-size 1.8em

.links
  a
    padding: 0 10px
    &:hover
      background-color: transparent
      transform: scale(1.1)
  .iconfont
    font-size: 1.5em
