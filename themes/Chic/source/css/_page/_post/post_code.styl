.post-content
  code, pre
    line-height 1.4em
    padding 7px
    font-size $font-size-code
    font-family Consolas, Monaco, Menlo, Consolas, monospace
  code
    color $light-code-font-color
    background $light-code-background-color
    .dark-theme &
      color $dark-code-font-color
      background $dark-code-background-color
  p // this is inline code
    code
      font-size $font-size-code
      margin 3px 3px
  pre
    code
      font-size $font-size-code
  ul, ol
    li
      code
        font-size $font-size-code
  h1,h2,h3,h4,h5
    code
      font-size inherit


  figure.highlight
    margin 1em 0
    overflow-x auto
    position relative
    &::-webkit-scrollbar
      width 6px
      height 6px
    &::-webkit-scrollbar-thumb
      width 6px
      background-color #eee
      border-radius 2px
    figcaption
      padding 0 0.5em
      text-align right
      font-size 13px
      span
        margin 0 0.5em
    table
      position relative
    table, tr, td
      margin 0
      padding 0
      border 0
      width 100%
      border-collapse collapse
    .code
      pre
        margin 0 0px

    // line number
    .gutter
      width 10px
      color #d0d0d0
      pre
        margin 0
