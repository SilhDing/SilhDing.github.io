.post-wrap
  .categories-card
    margin 0 auto
    margin-top 1em
    display flex
    align-items center
    justify-content space-between
    flex-direction row
    flex-wrap wrap
    padding 0 2.5em
    line-height 1.6em
    .card-item
      font-size 16px
      text-align left
      width 45%
      display flex
      align-items flex-start
      margin-top 2em
      min-height 16em
      padding 0 2%
      position relative
      .categories
        overflow hidden
        display: inline-block
        position: relative
        margin: 5px 10px
        word-wrap: break-word
        .category-title, .more-post-link
          color $light-post-link-color
          .dark-theme &
            color $dark-font-color
          &:hover
            color $light-post-link-hover-color
            .dark-theme &
              color $dark-global-link-hover-color
        .more-post-link
          font-weight bold
