// the main color
$vssue-theme-color ?= $light-theme-main-color

// the text color (used for common text)
$vssue-text-color ?= $light-font-color
$vssue-text-color-dark ?= $dark-font-color

// the text light color (used for muted text, disabled text, etc)
$vssue-text-light-color ?= $light-font-secondary-color

// the border color
$vssue-border-color ?= #eaecef
$vssue-border-color-dark ?= #696969

// the progress color
$vssue-progress-color ?= $vssue-theme-color

// the font size
$vssue-font-size ?= 16px

// the font family
$vssue-font-family ?= $font-family

// the mobile breakpoint
$vssue-breakpoint-mobile ?= 576px

// ltr-rtl direction
$vssue-direction ?= ltr
